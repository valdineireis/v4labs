<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="main" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} %5p [%-20c{1}] %m%n"/>
        </layout>
    </appender>

    <category name="br.com.caelum.vraptor">
        <priority value="INFO"/>
        <appender-ref ref="main"/>
    </category>

    <category name="org.jboss.logging">
        <priority value="WARN"/>
        <appender-ref ref="main"/>
    </category>
    
    <category name="br.com.valdineireis">
        <priority value="INFO"/>
        <appender-ref ref="main"/>
    </category>
    
    <category name="org.hibernate">
        <priority value="WARN"/>
        <appender-ref ref="main"/>
    </category>
    
    <category name="org.jboss.weld">
        <priority value="INFO"/>
        <appender-ref ref="main"/>
    </category>

    <category name="com.jintegrity.core.JIntegrity">
        <priority value="INFO" />
        <appender-ref ref="main" />
    </category>

    <category name="com.jintegrity.core.DbUnitManager">
        <priority value="INFO" />
        <appender-ref ref="main" />
    </category>

    <category name="com.jintegrity.vendor.MySqlDbUnitManager">
        <priority value="INFO" />
        <appender-ref ref="main" />
    </category>

</log4j:configuration>